.page {
    width: 100%;
    height: 100%;
    overflow: hidden;
    justify-content: center;
    align-items: center;
}

.page__content {
    width: 100%;
    height: 100%;
}

.page__background {
    position: absolute;
    width: 450%;
    height: 400%;
    min-width: 100%;
    min-height: 100%;
    -unity-background-scale-mode: scale-to-fit;
    background-color: #000;
}