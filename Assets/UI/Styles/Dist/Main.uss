}

.text--bold {
  -unity-font-style: bold;
}

.text--italic {
  -unity-font-style: italic;
}

.h1 {
  -unity-font-definition: var(--font-heading);
  white-space: normal;
}

.h2 {
  -unity-font-definition: var(--font-heading);
  white-space: normal;
}

